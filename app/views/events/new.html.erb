<div class= "container" >

  <h1>New event</h1>

<%= form_with(model: @event) do |form| %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.text_area :start_date %>
  </div>

    <div>
    <%= form.label :duration, style: "display: block" %>
    <%= form.text_area :duration %>
  </div>

    <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

    <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_area :price %>
  </div>

    <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_area :location %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

  <br>

  <div>
    <%= link_to "Back to events", events_path %>
  </div>
</div>